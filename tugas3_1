const cekHariKerja = (day) => {
    return new Promise((resolve, reject) => {
      setTimeout(() => {
        const dataDay = ["senin", "selasa", "rabu", "kamis", "jumat"];
        let cek = dataDay.find((item) => {
          return item === day;
        });
        if (cek) {
          resolve(cek);
        } else {
          reject(new Error("Hari ini bukan hari kerja"));
        }
      }, 3000);
    });
  };
  
    cekHariKerja("senin")
    .then((response) => console.log(response))
    .catch((response) => console.log(response));
  
  async function cek(day) {
    try {
      const hari = await cekHariKerja(day);
      console.log(`${hari} hari kerja`);
    } catch (error) {
      console.log(error);
    }
  }
  cek("selasa");

//then methode dapat digunakan sebagai pengganti callback ketika value pada promise bernilai resolve, 
//sedangkan catch digunakan sebagai error. perbedaan then-catch dengan try-catch adalah then catch digunkan pada promise 
//sedangkan try catch digunkan pada asyn/await
